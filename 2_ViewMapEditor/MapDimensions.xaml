<Window x:Class="_2_ViewMapEditor.MapDimensions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2_ViewMapEditor"
        mc:Ignorable="d"
        Title="MapDimensions" Height="180" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <Label>Geef de dimensies van de nieuwe map</Label>
            <StackPanel Orientation="Horizontal">
                <Label>Breedte: </Label>
                <TextBox Text="100" Name="txbBreedte"></TextBox>
                
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label>Hoogte:</Label>
                <TextBox Text="20" Name="txbHoogte"></TextBox>

            </StackPanel>
            <Button Name="btnKlaar" Margin="20" Click="Button_Click">Klaar</Button>
        </StackPanel>
        
    </Grid>
</Window>
